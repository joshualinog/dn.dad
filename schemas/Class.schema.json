{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Class.schema.json",
    "title": "D&D 5e Class",
    "description": "JSON Schema for D&D 5e Class data.",
    "$comment": "version 0.1.1",
    "type": "object",
    "required": ["name", "levels"],
    "properties": {
        "name": {
            "type": "string"
        },
        "levels": {
            "type": "integer",
            "minimum": 1
        },
        "subclass": {
            "type": "string"
        },
        "hit_die": {
            "type": "integer",
            "minimum": 1
        }
    }
}