{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "item.schema.json",
    "title": "JSON Schema for D&D 5e item.",
    "description": "General item schema. Extend this for weapons, armor, equipment.",
    "$comment": "version 0.1.1",
    "type": "object",
    "required": ["name"],
    "properties": {
        "name": { "type": "string" },
        "cost": {
            "type": "object",
            "properties": {
                "amount": { "type": "integer" },
                "unit": { "type": "string" }
            }
        },
        "weight": { "type": "number" },
        "description": { "type": "string" }
    }
}